{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "MinApi",
    "version": "4.3.14"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "http://**",
          "https://**"
        ]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "all": true,
        "asset": true,
        "assetScope": [
          "**",
          "$HOME/*",
          "$DOWNLOAD/**"
        ]
      },
      "fs": {
        "all": true,
        "writeFile": true,
        "scope": [
          "**",
          "$HOME/*",
          "$DOWNLOAD/*",
          "$APPDATA/*",
          "/Users/tiven/Downloads"
        ]
      },
      "dialog": {
        "all": true,
        "save": true
      },
      "globalShortcut": {
        "all": true
      },
      "process": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "copyright": "Copyright © 2024 Tiven",
      "publisher": "Tiven",
      "identifier": "com.tiven.build",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "category": "DeveloperTool",
      "shortDescription": "min api测试工具",
      "longDescription": "一个基于Tauri和React开发，用于http/https接口测试的工具",
      "windows": {
        "wix": {
          "language": "zh-CN"
        },
        "nsis": {
          "languages": [
            "SimpChinese",
            "English"
          ],
          "displayLanguageSelector": true
        }
      },
      "macOS": {
        "providerShortName": "MinApi"
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": false,
      "endpoints": [
        "https://tiven.cn/release.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVBQTQ4NjZGNzRCQzdERgpSV1RmeDB2M1praXFCYTU5ZHJIUHQ3K3FBSG5EdkNqQ2lBYWRsbXNRWXRNeHUzVmY5N1FJa1hobQo=",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      }
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "MinApi",
        "width": 900,
        "height": 700,
        "decorations": true,
        "skipTaskbar": false,
        "hiddenTitle": false,
        "theme": "Light",
        "titleBarStyle": "Visible",
        "fileDropEnabled": false,
        "userAgent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/100.0.4664.45 Safari/537.36"
      }
    ]
  }
}